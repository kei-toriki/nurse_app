<% if user_signed_in? %>
  <% if current_user.liked_by?(@question) %>
    <%= link_to '共感！', question_like_path(@question.id, @question.likes.ids), method: :DELETE, remote: true, class: 'like notlike' %>
    <span class="like_count"><%= @question.likes.count %></span>
  <% else %>
    <%= link_to '共感！', question_likes_path(@question.id), method: :POST, remote: true, class: 'like goodlike' %>
    <span class="like_count"><%= @question.likes.count %></span>
  <% end %>
<% else %>
  <p class="no_logins">
    <span class='like no_login'>共感数</span><span class="like_count"><%= @question.likes.count %><span>
  </p>
<% end %>