<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.79.0">
    <title>Signin Template · Bootstrap v5.0</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">

    

    <!-- Bootstrap core CSS -->
    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
  <link href="signin.css" rel="stylesheet">
  </head>
  <body class="text-center">

    <main class="form-signin">
    <h2>新規登録はこちら</h2>

    <%= form_for(@user, url: user_registration_path) do |f| %>

      <div class="field">
        <%= f.label :トップ画像 %> 
        <%= f.file_field :image %> 
      </div> 

      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><em>(再入力)</em><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>  

      <div class="field-genre">
        <%= f.label :役職 %>
        <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"position-select"}) %>
      </div> 

      <div class="field">
        <%= f.text_area :description, class:"question",placeholder: "自己紹介" %>
      </div>


      <div class="actions">
        <%= f.submit "次へ進む" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </main>
  </body>
</html>


    