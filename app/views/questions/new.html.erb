  <body class="text-center">
   
    <main class="form-signin">
      <h2>質問作成</h2>
      <%= form_with(model: @question, url: questions_path, local: true) do |f| %>
        <div class="field-genre">
          <%= f.label :ジャンル %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
        </div> 

        <div class="field">
          <%= f.text_field :title, placeholder: "タイトル" %>
        </div>

        <div class="field">
          <%= f.text_area :explanation, class: "question", placeholder: "質問内容"%>
        </div>

        <div class="tag-field", id='tag-field'>
          <%= f.label :name, "タグ" %>
          <%= f.text_field :name, class:"input-tag" %>
        </div>  

        <div class="actions">
          <%= f.submit "質問する" %>
        </div>
      <% end %>
      <%= link_to "戻る", root_path %>
    </main>
  </body>


    

